#include <stdio.h>
int main() {
    int N;
    scanf("%d",&N);
    int delays[N];
    for (int i=0; i<N; i++) {
        scanf("%d", &delays[i]);
    }
    int totalDelay = 0;
    int delayedDays = 0;
    int i=0;
    while(i<N) {
        totalDelay += delays[i];
        if (delays[i] > 2) {
            delayedDays++;
        }
        i++;
    }
    printf("Total Delay: %d\n",totalDelay);
    printf("Delayed Days: %d",delayedDays);

    return 0;

}