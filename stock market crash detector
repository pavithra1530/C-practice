#include <stdio.h>
int main() {
    int n;
    scanf("%d", &n);
    int arr[n];
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    int i = 1;
    int totalDrops = 0;
    int consecutiveDrops = 0;
    int crashDay = -1;
    while(i < n) {
        if(arr[i] < arr[i - 1]) {
            totalDrops++;
            consecutiveDrops++;
            if(consecutiveDrops == 3 && crashDay == -1) {
                crashDay = i + 1;
            }
        } else {
            consecutiveDrops = 0;
        }
        i++;
    }
    if(crashDay != -1) {
        printf("Crash Day: %d\n", crashDay);
    } else {
        printf("Crash Day: Not Detected\n");
    }
    printf("Total Drops: %d\n", totalDrops);
    return 0;
}
